root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,.gitconfig}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{*.sh,*.zsh,.zsh*}]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[{*.rb,Rakefile}]
indent_style = space
indent_size = 2

[{*.vim,*.nvim}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2
